@page "/folders"
@using System.IO

<PageTitle>C:\ Ordnerübersicht</PageTitle>

<div class="card bg-light shadow mb-4">
    <div class="card-body">
        <h3>C:\ Ordner</h3>
        @if (Folders is null)
        {
            <p>Loading folders...</p>
        }
        else if (Folders.Count == 0)
        {
            <p>No folders found.</p>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead class="fw-bold">
                    <tr>
                        <th>Name</th>
                        <th>Gesamter Pfad</th>
                        <th>Erstellt</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var folder in Folders)
                    {
                        <tr>
                            <td>@folder.Name</td>
                            <td>@folder.FullName</td>
                            <td>@folder.CreationTime.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@code {
    private List<DirectoryInfo>? Folders;

    protected override void OnInitialized()
    {
        try
        {
            // Get directories in C:\
            var root = new DirectoryInfo(@"C:\");
            Folders = root.GetDirectories().ToList();
        }
        catch
        {
            // In case of access restrictions or other IO errors
            Folders = new List<DirectoryInfo>();
        }
    }
}
